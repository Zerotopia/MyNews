<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_article_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center_vertical"
        android:id="@+id/row_article_image"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:paddingBottom="5dp">
    </ImageView>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:id="@+id/row_article_text_layout">

        <TextView
            android:id="@+id/row_article_topics"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_article_date"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:paddingBottom="5dp"
            />
        <TextView
            android:id="@+id/row_article_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@id/row_article_topics"
            android:textSize="15sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="3dp"/>
    </RelativeLayout>
</LinearLayout>